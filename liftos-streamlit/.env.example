# LiftOS Streamlit Hub Configuration

# Application Settings
DEBUG=false
ENVIRONMENT=development
LOG_LEVEL=INFO

# Authentication
REQUIRE_AUTH=false
DEMO_MODE=true
SESSION_TIMEOUT=3600

# Microservice URLs
CAUSAL_SERVICE_URL=http://localhost:8001
SURFACING_SERVICE_URL=http://localhost:8002
LLM_SERVICE_URL=http://localhost:8003
MEMORY_SERVICE_URL=http://localhost:8004
AUTH_SERVICE_URL=http://localhost:8005
GATEWAY_SERVICE_URL=http://localhost:8000

# API Configuration
API_TIMEOUT=30
CACHE_TTL=300

# Feature Flags
ENABLE_CAUSAL=true
ENABLE_SURFACING=true
ENABLE_LLM=true
ENABLE_EXPERIMENTS=true
ENABLE_MEMORY=true

# External API Keys (Optional - for direct platform integration)
META_API_KEY=your_meta_api_key_here
GOOGLE_ADS_API_KEY=your_google_ads_api_key_here
KLAVIYO_API_KEY=your_klaviyo_api_key_here

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false